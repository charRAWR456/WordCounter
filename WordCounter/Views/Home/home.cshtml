@using WordCounter;
<!DOCTYPE html>
<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
  <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  <script src="~/js/jquery-3.3.1.js"></script>
  <script src="~/js/scripts.js"></script>
  <title>Word Counter</title>
</head>
<body>
  <div class="container">
    <h1>Word Counter</h1>
    <form action="/result" method = "POST">
     <div class="form-group">
       <label for="user-word">Enter a Word</label>
       <input id ="user-word" name="user-word" class ="form-control" type="text">
     </div>
     <div class="form-group">
       <label for="user-sentence">Enter a sentence</label>
       <input id ="user-sentence" name="user-sentence" class ="form-control" type="text">
     </div>
       <button type="submit" id = "evaluate" name="button">Play!</button>

</body>
</html>
